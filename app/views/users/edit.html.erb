

<div class="formarea">
    <p class="link"> <a href="/users/<%= current_user.id %>">User page</a> </p>
    <h1>Edit User</h1>
    <form action="/users/<%= @user.id %>" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input type="hidden" name="_method" value="patch">    
        <p>Name:  <input class="input" type="text" id="Name" name = "user[name]" value = "<%= @user.name %>"> </p>
        <p>Email: <input class="longinput" type="text" id="Email" name = "user[email]" value = "<%= @user.email %>"> </p>
        <p><input class="update_button" type="submit" name="Update" value="Update"> </p>
    </form>

    <h1><br><br>Delete User</h1><br>
    <form action="/users/<%= @user.id %>" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input type="hidden" name="_method" value="delete">
        <p><input class="del_button" type="submit" value="Delete Account"> </p>
    </form>
</div>
